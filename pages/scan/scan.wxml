<!--pages/scan.wxml-->
<camera mode="scanCode" device-position="back" flash="off" 
 bindscancode="takeCode" style="width: 100%; height: 400px;"></camera>
<scroll-view  scroll-x="true" style=" height: 120px; display:flex;  width: 100%;white-space: nowrap;" >
  <view wx:for="{{scannedBooks}}" style="width: 140px; height: 30px; display: inline-grid">
    <image  style="width: 140px; height: 80px;" src="{{item.img}}" mode="aspectFit"></image>
    <text style="text-align: center;">{{item.title}}</text>
    <text style="text-align: center;">{{item.author}}</text>
  </view>
</scroll-view>
<view  style="display:flex;  width: 100%;white-space: nowrap;">
  <button type="primary" bindtap="takeCode">测试</button>
  <button type="primary" bindtap="stock">入库</button>
  <button >取消</button>
</view>